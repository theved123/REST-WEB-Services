package com.practice;

public class CountOcurance {

	public static void main(String[] args) {

		String str = "aaabbbccc";

		int count = 0;
		char s1 = 'a' ;
		char s2 = 'b' ;
		char s3 = 'c' ;

		for (int i = 0; i < str.length(); i++) {

			if (str.charAt(i) == s1) {

				count++;
				System.out.print(s1);

			}else if(str.charAt(i) == s2) {

				count++;
				System.out.print(s2);

			}

		}
		System.out.println(count);
	}

}
